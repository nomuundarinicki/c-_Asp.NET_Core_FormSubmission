@{
    ViewData["Title"] = "Home Page";
}
<h1>Enter your Information</h1>

<div>
    @{
        foreach(var error in ViewBag.errors)
        {
            //If there are any errors for a field...
            if(@error.Errors.Count > 0)
            {
                // We show the first error for that field
                <p>@error.Errors[0].ErrorMessage</p>
            }
        }
    }
</div>

<form action="/" method="post">
    First Name : <input type="text" name="FirstName" placeholder="Name here">
    Last Name : <input type="text" name="LastName" placeholder="Last Name here">
    Age: <input type="text" name="Age">
    Email: <input type="text" name="Email">
    Password: <input type="password" name="Password">
    <input type="submit" value="Submit">
</form>

